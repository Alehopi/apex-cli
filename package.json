{
  "name": "apex-cli",
  "version": "1.0.0",
  "description": "CLI tool for APEX Design System - Install components with a single command",
  "type": "module",
  "bin": {
    "apex-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "design-system",
    "cli",
    "react",
    "components",
    "tailwindcss",
    "apex"
  ],
  "author": "Alejandra Mamblona Gomez",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.1",
    "prompts": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
